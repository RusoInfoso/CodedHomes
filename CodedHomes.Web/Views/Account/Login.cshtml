@model CodedHomes.Web.Models.LoginModel

<div class="panel panel-default">
    <div class="panel-heading">Login</div>
    <div class="panel-body" id="loginForm">
        <p class="lead">@Html.ActionLink("Register", "Register") if you don't have an account.</p>

        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-3">@Html.LabelFor(m => m.UserName)</div>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-lg-3">@Html.LabelFor(m => m.Password)</div>
                    <div class="col-lg-9">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-9">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-9">
                        <input class="btn btn-large" type="submit" value="Log in" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
